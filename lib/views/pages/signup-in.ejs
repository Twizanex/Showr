<div id="authentication">
    <div class="container">
        <div> <%= msg %></div>
        <form class="form-signin" role="form" method="post" action="<%= actionpath %>">
            <ul class="nav nav-pills pull-right">
                <li class="active"><a href="/">Home</a></li>
            </ul>
            <h2 class="form-signin-heading"><%= headingtext %></h2>
            <input type="username" class="form-control" placeholder="Username" name="username" required autofocus>
            <input type="password" class="form-control" placeholder="Password" name="password" required>
            <button class="btn btn-lg btn-primary btn-block" type="submit"><%= buttontext %></button>
        </form>
    </div> <!-- /container -->
</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js" type="text/javascript"></script>
<script src="/javascripts/bootstrap.js"></script>
