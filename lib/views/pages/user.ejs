<script src="/javascripts/myscript.js" type="text/javascript"></script>
<div class="container-fluid">
    <div class="header">
        <% include ../partials/header%>
    </div>

    <div class="row marketing">
        <div class="col-md-3">
            <h4>Profile</h4>
            <h4> <%= friends %> </h4>
            <%if (user_id && friends) {%>
            <p>Friends: yes</p>
            <div>
                <button class="addFriendButton" onclick="removeFriend('<%= username %>')"><span class="glyphicon glyphicon-minus"></span></button>
            </div>
            <%}%>

            <%if (user_id && !friends) {%>
            <p>Friends: no</p>
            <div>
                <button class="addFriendButton" onclick="addFriend('<%= username %>')"><span class="glyphicon glyphicon-plus"></span></button>
            </div>
            <%}%>

            <span class="glyphicon glyphicon-user"><small id="username"><%= username %></small></span>
        </div>

        <%if (friends == true) {%>

        <div class="col-md-3 col-md-offset-1">
            <h4 class="well-md">Post message to <%= username %></h4>
            <form class="form-group" id="messageForm" onsubmit="validate('<%= username %>');return false;">
                <div>
                    <input id="postMessage" type="text" name="Message" class="form-control input-lg">
                    </br>
                    <input id="postSubmit" type="submit" name="Post Message" class="btn btn-primary">
                </div>
            </form>
            <div id="messageContainer">
            </div>
        </div>

        <%}%>

    </div>
    <div class="footer">
        <% include ../partials/footer%>
    </div>

</div> <!-- /container -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js" type="text/javascript"></script>
<script src="/javascripts/bootstrap.js"></script>

